# Spotify Configuration
# Get these from https://developer.spotify.com/dashboard
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Apple Music Configuration  
# Get these from https://developer.apple.com/musickit/
NEXT_PUBLIC_APPLE_MUSIC_DEVELOPER_TOKEN=your_apple_music_token_here
NEXT_PUBLIC_APPLE_MUSIC_APP_NAME=SW Personal
NEXT_PUBLIC_APPLE_MUSIC_APP_BUILD=1.0.0

# SoundCloud Configuration
# Get these from https://soundcloud.com/you/apps
NEXT_PUBLIC_SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id_here

# YouTube Configuration (optional - works with curated streams without API key)
# Get from https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key_here

# App URL (for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000
